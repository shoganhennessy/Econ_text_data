filter(!is.na(citation_count)) %>%
group_by(publication_date) %>%
summarise(total_citations = sum(citation_count, na.rm = T),
mean_citations = round(mean(citation_count, na.rm = T)),
total_articles = n(),
gini_coefficient = reldist::gini(citation_count))
rm(list = ls())
gc()
